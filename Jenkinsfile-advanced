pipeline {
    agent any
    
    triggers {
        pollSCM('H/5 * * * *')
    }
    
    options {
        timeout(time: 1, unit: 'HOURS')
        buildDiscarder(logRotator(numToKeepStr: '10'))
        skipStagesAfterUnstable()
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out code...'
                retry(3) {
                    checkout([
                        $class: 'GitSCM',
                        branches: [[name: '*/main']],
                        extensions: [
                            [$class: 'CloneOption', 
                             timeout: 30, 
                             depth: 1, 
                             shallow: true,
                             noTags: true],
                            [$class: 'CheckoutOption', timeout: 30]
                        ],
                        userRemoteConfigs: [[
                            url: 'https://github.com/kannankdevops/testing.git'
                        ]]
                    ])
                }
            }
        }
        
        stage('Build') {
            steps {
                echo 'Installing dependencies...'
                bat 'npm install'
                echo 'Building Docker image...'
                bat 'docker build -t myapp:latest .'
            }
        }
        
        stage('Test') {
            steps {
                echo 'Running tests...'
                bat 'npm test'
            }
        }
        
        stage('Push to Registry') {
            steps {
                echo 'Tagging and pushing image...'
                bat 'docker tag myapp:latest localhost:5000/myapp:latest'
                bat 'docker push localhost:5000/myapp:latest'
            }
        }
        
        stage('Deploy to Dev') {
            steps {
                echo 'Deploying to Kubernetes...'
                bat 'kubectl apply -f k8s-deployment.yaml'
                bat 'kubectl rollout status deployment/myapp -n jenkins'
            }
        }
        
        stage('Smoke Test') {
            steps {
                echo 'Running smoke tests...'
                script {
                    sleep(time: 10, unit: 'SECONDS')
                    bat 'curl -s http://myapp.local/health'
                }
            }
        }
    }
    
    post {
        success {
            echo '✅ Pipeline completed successfully!'
        }
        failure {
            echo '❌ Pipeline failed! Check logs.'
        }
        always {
            echo 'Cleaning up workspace...'
            cleanWs()
        }
    }
}
