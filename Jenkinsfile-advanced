pipeline {
    agent any

    triggers {
        pollSCM('H/5 * * * *')
    }

    options {
        timeout(time: 1, unit: 'HOURS')
        buildDiscarder(logRotator(numToKeepStr: '10'))
        skipStagesAfterUnstable()
        timestamps()
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out code...'
                git branch: 'main',
                    url: 'https://github.com/kannankdevops/testing.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                echo 'Installing npm packages...'
                bat 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                echo 'Running tests...'
                bat 'npm test'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image...'
                bat 'docker build -t kkaann/myapp:%BUILD_NUMBER% .'
                bat 'docker tag kkaann/myapp:%BUILD_NUMBER% kkaann/myapp:latest'
            }
        }

        stage('List Docker Images') {
            steps {
                echo 'Listing Docker images...'
                bat 'docker images | findstr myapp'
            }
        }

        stage('Test Container Locally') {
            steps {
                echo 'Testing Docker container...'
                script {
                    bat '''
                        docker run -d --name test-myapp -p 3001:3000 kkaann/myapp:latest
                        timeout /t 10 /nobreak >nul
                        curl -s http://localhost:3001/health || echo Health check pending
                        docker stop test-myapp
                        docker rm test-myapp
                    '''
                }
            }
        }

        stage('Push to Docker Hub') {
            when {
                expression { return false }  // Disabled for now
            }
            steps {
                echo 'Pushing to Docker Hub...'
                withCredentials([usernamePassword(
                    credentialsId: 'github-credentials',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    bat '''
                        echo %DOCKER_PASS% | docker login -u %DOCKER_USER% --password-stdin
                        docker push kkaann/myapp:%BUILD_NUMBER%
                        docker push kkaann/myapp:latest
                    '''
                }
            }
        }
    }

    post {
        success {
            echo '✅ Pipeline completed successfully!'
            bat 'docker images | findstr myapp'
        }
        failure {
            echo '❌ Pipeline failed! Check logs.'
        }
        always {
            echo 'Cleaning up...'
            bat 'docker system prune -f || exit /b 0'
        }
    }
}